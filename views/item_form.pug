extends layout

block content
    .page-container
        h1= title
        form(action="" method="POST")
            label(for="name") Name:
                input(type="text" name='name' requried='true')
            //- figure out category drop down
            label(for='category') Category:
                select(name='category')
                    each category in categories
                        option(value=category._id) #{category.name}
            label(for="description") Descrption:
                input(type="text" name='description' requried='true')
            label(for="price") Price:
                input(type="number" min='0.00' max='1000000000.00' step='0.01' name='price' requried='true')
            label(for="stock_available") Available:
                input(type="number" name='stock_available')    
            
            input(type="submit")